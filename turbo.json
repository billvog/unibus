{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ],
      "cache": false
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "env": [
        "NODE_ENV",
        "SKIP_ENV_VALIDATION"
      ]
    },
    "typecheck": {
      "dependsOn": [
        "^typecheck"
      ],
      "cache": false
    }
  }
}